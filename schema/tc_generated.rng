<?xml version="1.0" encoding="UTF-8"?>
<grammar ns="" xmlns="http://relaxng.org/ns/structure/1.0"
  datatypeLibrary="http://www.w3.org/2001/XMLSchema-datatypes">
  <start>
    <element name="root">
      <mixed>
        <element name="page">
          <data type="NMTOKEN"/>
        </element>
        <element name="image">
          <data type="anyURI"/>
        </element>
        <oneOrMore>
          <choice>
            <!--          <text/> -->
            <ref name="e.ab"/>
            <ref name="e.figure"/>
            <ref name="e.div"/>
          </choice>
        </oneOrMore>
      </mixed>
    </element>
  </start>

  <!--                   -->
  <!-- BLOCK ELEMENTS    -->
  <!--                   -->


  <!-- ab -->
  <define name="e.ab">
    <element name="ab">
      <optional>
        <ref name="e.cont"/>
      </optional>
      <optional>
        <ref name="e.margin"/>
      </optional>
      <ref name="m.phrase"/>
      <optional>
        <ref name="e.cont"/>
      </optional>
    </element>
  </define>


  <!-- div -->
  <define name="e.div">
    <element name="div">
      <optional>
        <ref name="e.cont"/>
      </optional>
      <ref name="e.id"/>
      <optional>
        <ref name="e.margin"/>
      </optional>
      <optional>
        <ref name="e.head"/>
      </optional>
      <oneOrMore>
        <choice>
          <text/>
          <ref name="e.ab"/>
          <ref name="m.phrase"/>
        </choice>
      </oneOrMore>
      <optional>
        <ref name="e.cont"/>
      </optional>
    </element>
  </define>

  <!-- figure -->
  <define name="e.figure">
    <element name="figure">
      <optional>
        <ref name="e.id"/>
      </optional>
      <optional>
        <ref name="e.margin"/>
      </optional>
      <optional>
        <element name="link">
          <data type="anyURI"/>
        </element>
      </optional>
      
      <oneOrMore>
        <choice>
          <ref name="m.phrase"/>
          <element name="caption">
            <oneOrMore>
              <choice>
                <text/>
                <ref name="m.phrase"/>
              </choice>
            </oneOrMore>
          </element>
        </choice>
      </oneOrMore>
    </element>
  </define>

   <!-- head -->
  <define name="e.head">
    <element name="head">
      <ref name="m.phrase"/>
    </element>
  </define>

  <!--                           -->
  <!-- TRANSCRIPTION ELEMENTS    -->
  <!--                           -->

  <define name="e.add">
    <element name="add">
      <ref name="m.phrase"/>
    </element>
  </define>
   
  <!-- corr -->
  <define name="e.corr">
    <element name="corr">
      <ref name="m.phrase"/>
    </element>
  </define>

  <!-- del -->
  <define name="e.del">
    <element name="del">
      <ref name="m.phrase"/>
    </element>
  </define>

   <!-- gap -->
  <define name="e.gap">
    <element name="gap">
      <empty/>
    </element>
  </define>

  <!-- lb -->
  <define name="e.lb">
    <element name="lb">
      <empty/>
    </element>
  </define>
  
  <!-- man -->
  <define name="e.man">
    <element name="man">
      <ref name="e.margin"/>
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- rub -->
  <define name="e.rub">
    <element name="rub">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- sup -->
  <define name="e.sup">
    <element name="sup">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- underline -->
  <define name="e.underline">
    <element name="underline">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!--                           -->
  <!--  ATTR-LIKE ELEMENTS       -->
  <!--                           -->

  <define name="e.id">
    <element name="id">
      <data type="NMTOKEN"/>
    </element>
  </define>
  
  <!-- margin -->
  <define name="e.margin">
    <element name="margin">
      <optional>
        <choice>
          <value>left-top</value>
          <value>left-middle</value>
          <value>left-bottom</value>
          <value>right-top</value>
          <value>right-middle</value>
          <value>right-bottom</value>
          <value>top</value>
          <value>bottom</value>
        </choice>
      </optional>
    </element>
  </define>
  
  <define name="e.cont">
    <element name="cont">
      <empty/>
    </element>
  </define>
  
  <!--                            -->
  <!--  LANGUAGE ELEMENTS         -->
  <!--                            -->
  
  <!-- gk -->
  <define name="e.gk">
    <element name="gk">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- it -->
  <define name="e.it">
    <element name="it">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- la -->
  <define name="e.la">
    <element name="la">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- fr -->
  <define name="e.fr">
    <element name="fr">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- oc -->
  <define name="e.oc">
    <element name="oc">
      <ref name="m.phrase"/>
    </element>
  </define>
  <!--                            -->
  <!--  SEMANTIC ELEMENTS         -->
  <!--                            -->
  
  <!-- bp -->
  <define name="e.bp">
    <element name="bp">
      <text/>
    </element>
  </define>
  
  <!-- pro -->
  <define name="e.pro">
    <element name="pro">
      <ref name="m.phrase"/>
    </element>
  </define>
  <!-- ms -->
  <define name="e.ms">
    <element name="ms">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- al -->
  <define name="e.al">
    <element name="al">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- env -->
  <define name="e.env">
    <element name="env">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- m -->
  <define name="e.m">
    <element name="m">
      <ref name="m.phrase"/>
    </element>
  </define>

  <!-- pa -->
  <define name="e.pa">
    <element name="pa">
      <ref name="m.phrase"/>
    </element>
  </define>

  <!-- tmp -->
  <define name="e.tmp">
    <element name="tmp">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- tl -->
  <define name="e.tl">
    <element name="tl">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- sn -->
  <define name="e.sn">
    <element name="sn">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- pl -->
  <define name="e.pl">
    <element name="pl">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- pn -->
  <define name="e.pn">
    <element name="pn">
      <ref name="m.phrase"/>
    </element>
  </define>

  <!-- cn -->
  <define name="e.cn">
    <element name="cn">
      <text/>
    </element>
  </define>
  
  <!-- mu -->
  <define name="e.mu">
    <element name="mu">
      <ref name="m.phrase"/>
    </element>
  </define>
  
  <!-- md -->
  <define name="e.md">
    <element name="md">
      <ref name="m.phrase"/>
    </element>
  </define>
  

<!-- PHRASE MODEL -->
  
  <!-- m.phrase -->
  <define name="m.phrase">
    <oneOrMore>
      <choice>
        <text/>
        <ref name="e.ab"/>
        <ref name="e.add"/>
        <ref name="e.al"/>
        <ref name="e.bp"/>
        <ref name="e.cn"/>
        <ref name="e.del"/>
        <ref name="e.env"/>
        <ref name="e.figure"/>
        <ref name="e.fr"/>
        <ref name="e.it"/>
        <ref name="e.la"/>
        <ref name="e.lb"/>
        <ref name="e.m"/>
        <ref name="e.man"/>
        <ref name="e.ms"/>
        <ref name="e.pa"/>
        <ref name="e.pl"/>
        <ref name="e.pn"/>
        <ref name="e.pro"/>
        <ref name="e.sn"/>
        <ref name="e.sup"/>
        <ref name="e.tl"/>
        <ref name="e.tmp"/>
        <ref name="e.corr"/>
        <ref name="e.gap"/>
        <ref name="e.gk"/>
        <ref name="e.md"/>
        <ref name="e.mu"/>
        <ref name="e.oc"/>
        <ref name="e.rub"/>
        <ref name="e.underline"/>
      </choice>
    </oneOrMore>
  </define>

</grammar>
